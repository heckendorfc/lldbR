#######################################################

PKG_LIBS = @LLDBR_LIBS@
OBEXTRA = @OBEXTRA@
LLDB_HOME = @LLDB_HOME@
MAKE = @MAKE@

LLDBOBJ = lldb/clldb.a
ROBJ = raw.o lldbtypes.o
OBJECTS = $(ROBJ) $(LLDBOBJ)

all: $(SHLIB)


$(SHLIB): $(OBJECTS)
$(OBJECTS): $(OBEXTRA)


mkclldb:
	( mkdir -p libs; cd lldb; $(MAKE) BUILD_DIR=../ LLDB_HOME=$(LLDB_HOME) LDB_LIBS=$(PKG_LIBS))

instclldb: mkclldb

clean:
	rm -rf ./libs ./*.so ./*.o
