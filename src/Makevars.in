#######################################################

LLDB_HOME = @LLDB_HOME@

PKG_CPPFLAGS = -I$(LLDB_HOME)/include
PKG_LIBS = @LLDBR_LIBS@
OBEXTRA = @OBEXTRA@

LLDBOBJ = lldb/clldb.a
ROBJ = raw.o lldbtypes.o
OBJECTS = $(ROBJ) $(LLDBOBJ)

all: $(SHLIB)


$(SHLIB): $(OBJECTS)
$(OBJECTS): $(OBEXTRA)


mkclldb:
	( mkdir -p libs; cd lldb; gmake BUILD_DIR=../ LLDB_HOME=$(LLDB_HOME) LDB_LIBS=$(PKG_LIBS))

instclldb: mkclldb

clean:
	rm -rf ./libs ./*.so ./*.o
